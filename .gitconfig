[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[alias]
	s = status
	d = diff
	gitconfiglist = git config --global -l
	co = checkout
	last = -1 HEAD
	pr = pull --rebase
	amend = commit --amend --no-edit
	ga = !echo 'git add .' && git add .
	gac = !echo 'git add . && git commit -m' && git add . && git commit -m
	gc = !echo 'git commit -m' && git commit -m
	gp = !echo 'git push origin' && git push origin
	pc = !git push origin "$(git symbolic-ref --short HEAD)"
	vanish = !echo 'git reset --soft HEAD~1' && git reset --soft HEAD~1
	delete = !echo 'git reset --hard HEAD~1' && git reset --hard HEAD~1
	structure = log --oneline --simplify-by-decoration --graph --all
	l1 = log -1 --pretty=slog
	l5 = log -5 --pretty=slog 
	slog = log --pretty=slog
	slogbw = log --pretty=bw
	glog = log --graph --pretty=slog 
	outgoing = log --pretty=slog @{u}..
	aliases = !git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /

[pretty]
    slog = format:%C(yellow)%h %Cred%as %Cblue%an%Cgreen%d %Creset%s
    bw = format:%h | %as | %>(20,trunc)%d%x09%s
